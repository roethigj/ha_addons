{
  "name": "eebus2mqtt",
  "version": "0.0.0053",
  "slug": "eebus2mqtt",
  "description": "MQTT Ausgabe für eebus-Signale einer Steuerbox",
  "url": "https://github.com/roethigj/ha_addons/tree/main/eebus2mqtt",
  "arch": [
    "aarch64",
    "amd64"
  ],
  "startup": "application",
  "boot": "auto",
  "advanced": true,
  "hassio_api": true,
  "host_network": true,
  "panel_icon": "mdi:solar-power",
  "init": false,
  "map": [
    {
      "type": "addon_config",
      "path": "/config",
      "read_only": false
    }
  ],
  "options": {
    "SKI": "Controlbox-SKI-1234",
    "pv_max": 10000,
    "MQTT": {
      "host": "127.0.0.1",
      "user": "user",
      "port": 1883,
      "password": "password"
    }
  },
  "schema": {
    "SKI": "str",
    "pv_max": "int",
    "MQTT": {
      "host": "str",
      "user": "str",
      "port": "int",
      "password": "str"
    }
  },
  "options_description": {
    "SKI": "Identifikationsnummer der Steuerbox (Controlbox-SKI).",
    "pv_max": "Maximale Leistung der PV  in WattPeak.",
    "MQTT": {
      "host": "Hostname oder IP-Adresse des MQTT-Servers.",
      "port": "Port des MQTT-Servers",
      "user": "Benutzername für den MQTT-Zugang.",
      "password": "Passwort für den MQTT-Zugang."
    }
  }
}
